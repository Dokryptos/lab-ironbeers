<div>
    {{#each randomBeer}}
        <h2>{{this.name}}</h2>
        <p>{{this.description}}</p>
        <img src="{{this.image_url}}" alt="Beers">
        <h4>{{this.tagline}}</h4>
    {{/each}}

    <h3>Food Pairing</h3>
    <ul>
    {{#each randomBeer}}
        {{#each this.food_pairing}}
            <li>{{this}}</li>
        {{/each}}
    {{/each}}
    </ul>

    {{#each randomBeer}}
        <h3>Brewer Tips :</h3><p>{{this.brewers_tips}}</p>
    {{/each}}


</div>